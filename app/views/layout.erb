<!--[if gt IE 8]><!--> <html class="no-js" lang="en"> <!--<![endif]-->
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1" />

    <title>BucketList</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="/stylesheets/main.css" />
  </head>
  <body>
    <nav>

      <%if flash[:error]%>
        <p style="text-align: center; padding-top: 10px;" style="color:red"><%= flash[:error] %></p>
      <%end%>

      <%if flash[:message]%>
        <p style="text-align: center; padding-top: 10px;" style="color:blue"><%= flash[:error] %></p>
      <%end%> 

      <%if current_user%>
        <form action="/logout" method='post' style="display: inline;">
          <input type="hidden" name="_method" value="DELETE">
          <button type="submit" value="Logout" style="padding: 2px;"> Logout </button>
        </form>
        <button type="button" style="padding: 2px;"><a href="/bucketlistgoals" style="text-decoration: none; color: black;">My Bucket List Goals</a></button>
        <button type="button" style="padding: 2px;"><a href="/bucketlistgoals/new" style="text-decoration: none; color: black;">Add a New Bucket List Goal</a></button>
      <%else%>
      <button type="button" style="padding: 2px;"><a href="/login" style="text-decoration: none; color: black;">Login</a></button>
      <button type="button" style="padding: 2px;"><a href="/signup" style="text-decoration: none; color: black;">Sign Up</a></button>
      <%end%>
    </nav>
    <div class="wrapper">

        <%= yield %>

      <footer class="branding">
      </footer>
    </div>

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
    <!--[if lt IE 7]>
      <script src="//ajax.googleapis.com/ajax/libs/chrome-frame/1.0.2/CFInstall.min.js"></script>
      <script>window.attachEvent("onload",function(){CFInstall.check({mode:"overlay"})})</script>
    <![endif]-->
  </body>
</html>
